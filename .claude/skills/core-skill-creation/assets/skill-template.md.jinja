---
name: {{ skill_name }}
description: {{ description }}
version: 1.0.0
allowed-tools: {{ allowed_tools | default('["Read", "Write", "Grep"]') }}
metadata:
  auto-invoke: {{ auto_invoke | default('true') }}
  triggers:
    patterns:
{% for pattern in trigger_patterns %}
      - "{{ pattern }}"
{% endfor %}
    keywords:
{% for keyword in trigger_keywords %}
      - {{ keyword }}
{% endfor %}
  capabilities:
{% for capability in capabilities %}
    - {{ capability }}
{% endfor %}
  prerequisites: {{ prerequisites | default('[]') }}
  outputs:
{% for output in outputs %}
    - {{ output }}
{% endfor %}
---

