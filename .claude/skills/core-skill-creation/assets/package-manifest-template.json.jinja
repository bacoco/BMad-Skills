{
  "name": "{{ skill_name }}",
  "version": "{{ version }}",
  "description": "{{ description }}",
  "author": "{{ author | default('Unknown') }}",
  "license": "{{ license | default('MIT') }}",
  "repository": "{{ repository | default('') }}",

  "skill": {
    "path": "{{ skill_name }}/SKILL.md",
    "allowed_tools": {{ allowed_tools | tojson }},
    "auto_invoke": {{ auto_invoke | default('true') | tojson }}
  },

  "files": {
    "required": [
      "SKILL.md",
      "REFERENCE.md",
      "WORKFLOW.md",
      "CHECKLIST.md"
    ],
    "assets": [
{% for asset in asset_files %}
      "assets/{{ asset }}"{% if not loop.last %},{% endif %}

{% endfor %}
    ],
    "scripts": [
{% for script in script_files %}
      "scripts/{{ script }}"{% if not loop.last %},{% endif %}

{% endfor %}
    ]
  },

  "metadata": {
    "packaged_at": "{{ package_timestamp }}",
    "bundle_version": "{{ bundle_version | default('2.1.4') }}",
    "compliant_with": "Claude Skills v1.0 specification"
  },

  "dependencies": {
    "runtime": [],
    "development": ["pytest>=7.4.0"]
  },

  "installation": {
    "target_directory": ".claude/skills/{{ skill_name }}",
    "verify_command": "python .claude/skills/core-skill-creation/scripts/quick_validate.py .claude/skills/{{ skill_name }}"
  }
}
